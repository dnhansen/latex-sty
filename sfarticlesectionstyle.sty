\makechapterstyle{chapterbox}{%
	\setlength{\beforechapskip}{0pt}
	\renewcommand{\chapnamefont}{\large\scshape}
	\renewcommand{\chapnumfont}{\sffamily\LARGE\bfseries}
	\renewcommand{\chaptitlefont}{\raggedright\chapnumfont}
	\renewcommand{\printchaptername}{}
	\renewcommand{\chapternamenum}{}
	\renewcommand{\printchapternum}{\newcommand\chaptersymb{\thechapter}}
	\renewcommand{\printchapternonum}{\newcommand\chaptersymb{$\divideontimes$}} % \adfoutlineleafright
	\renewcommand{\afterchapternum}{}
	\renewcommand{\printchaptertitle}[1]{%
		\begin{tabular}{@{}p{1cm} p{\textwidth-3cm}}%
		\colorbox{chaptercolor}{\color{white}%
		\makebox[0.85cm]{\chapnumfont\strut \chaptersymb}}
		& \chaptitlefont \textcolor{chaptercolor}{##1}
		\end{tabular}
	}
}
\chapterstyle{chapterbox}

