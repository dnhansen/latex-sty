}

% Options

\DeclareOption{sc}{
	\renewcommand*{\memUChead}[1]{\normalfont\unboldmath\scshape\MakeTextLowercase{#1}}
	\pagestyle{articlesc}
}
\DeclareOption{it}{
	\nouppercaseheads
	\pagestyle{articleit}
}
\DeclareOption{sf}{
	\nouppercaseheads
	\copypagestyle{chapter}{plain}
	\makeoddfoot{chapter}{}{\sffamily\thepage}{}
	\pagestyle{articlesf}
}
\ProcessOptions\relax

